{
  "name": "@bniladridas/tts",
  "version": "1.2.5",
  "description": "Google Gemini TTS API test script",
  "main": "dist/cli/index.js",
  "type": "module",
  "repository": "https://github.com/bniladridas/tts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsx src/api/server.ts",
    "dev": "tsx watch src/api/server.ts",
    "cli": "tsx src/cli/index.ts",
    "cli:interactive": "tsx src/cli/commands/interactive.ts",
    "cli:advanced": "tsx src/cli/commands/advanced.ts",
    "test": "vitest",
    "test:e2e": "vitest --run e2e",
    "build": "tsc",
    "postbuild": "echo '#!/usr/bin/env node' | cat - dist/cli/index.js > temp && mv temp dist/cli/index.js && chmod +x dist/cli/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "gemini-tts": "./dist/cli/index.js"
  },
  "dependencies": {
    "@google/genai": "^0.6.1",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "mime": "^3.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "semantic-release": "^24.2.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
